<!DOCTYPE html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  {{> head}}
  <!-- my js & css -->
	<link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700' rel='stylesheet' type='text/css'>

	<link href='css/multiline.css' rel='stylesheet' type='text/css'>

</head>
<body>
  {{> header}}

  {{> start}}
  <!-- my charts -->
	<div class="ui segment">
		<div class="ui active inverted dimmer" id="wait">
			<div class="ui large text loader">Loading</div>
		</div>
		<div class="ui grid">
			<div class="multilineChart twelve wide column"></div>
			<div class="multilineChartSelector two wide column">
				<div class="ui segment">
					<div class="ui checkbox">
						<input type="checkbox">
						<label>Checkbox</label>
					</div>
				</div>
			</div>
		</div>
	</div>

  {{> end}}
    <!-- my js & css -->
    {{> footer}}
<script src="https://cdn.firebase.com/js/client/2.3.1/firebase.js"></script>

    <script src="js/multiline.js"></script>

    <script>

    	$().ready(function (){
            drawMultilineChart(d3.select(".multilineChart"),
				d3.select(".multilineChartSelector"),
				$(".multilineChart").width(),
				$(".multilineChart").height());
    	});

    </script>


</body>
